@model SistemKasir.Models.Kategori

@{
    ViewData["Title"] = "Edit";
}

<div class="text-end">
    <h1>Edit Kategori</h1>
</div>

<hr />
<div class="row justify-content-center">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdKategori" />
            <div class="form-group mb-2">
                <label asp-for="Deskripsi" class="control-label"></label>
                <input asp-for="Deskripsi" class="form-control" />
                <span asp-validation-for="Deskripsi" class="text-danger"></span>
            </div>
            <div class="form-group mb-2">
                <label asp-for="Status" class="control-label"></label>
                <select asp-for="Status" class="form-select">
                    <option value="true">Aktif</option>
                    <option value="false">Tidak Aktif</option>
                </select>
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>
            <div class="form-group mt-4">
                <input type="submit" value="Simpan" class="btn btn-custom form-control" />
            </div>
            <div class="form-group mt-2">
                <a class="btn btn-outline-secondary form-control" asp-action="Index">Kembali</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }
